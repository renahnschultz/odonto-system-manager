<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>odonto-system-manager</display-name>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>admin-1.0.0-RC18</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>osm-realm</realm-name>
		<form-login-config>
			<form-login-page>/paginas/login.xhtml</form-login-page>
			<form-error-page>/paginas/login.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	<security-constraint>
        <web-resource-collection>
            <web-resource-name>
                Odonto System Manager
            </web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
	<welcome-file-list>
		<welcome-file>paginas/login.jsf</welcome-file>
	</welcome-file-list>
	
	<security-role>
		<role-name>administrador</role-name>
	</security-role>
	<security-role>
		<role-name>visualizar-servico</role-name>
	</security-role>
	<security-role>
		<role-name>cadastrar-servico</role-name>
	</security-role>
	<security-role>
		<role-name>editar-servico</role-name>
	</security-role>
	<security-role>
		<role-name>excluir-servico</role-name>
	</security-role>
	<security-role>
		<role-name>cadastrar-material</role-name>
	</security-role>
	<security-role>
		<role-name>visualizar-material</role-name>
	</security-role>
	<security-role>
		<role-name>editar-material</role-name>
	</security-role>
	<security-role>
		<role-name>excluir-material</role-name>
	</security-role>
	<security-role>
		<role-name>cadastrar-usuarios</role-name>
	</security-role>
	<security-role>
		<role-name>visualizar-usuarios</role-name>
	</security-role>
	<security-role>
		<role-name>editar-usuarios</role-name>
	</security-role>
	<security-role>
		<role-name>excluir-usuarios</role-name>
	</security-role>
	<security-role>
		<role-name>cadastrar-perguntas</role-name>
	</security-role>
	<security-role>
		<role-name>editar-perguntas</role-name>
	</security-role>
	<security-role>
		<role-name>excluir-perguntas</role-name>
	</security-role>
	<security-role>
		<role-name>cadastrar-anamnese</role-name>
	</security-role>
	<security-role>
		<role-name>editar-anamnese</role-name>
	</security-role>
	<security-role>
		<role-name>receber</role-name>
	</security-role>
	<security-role>
		<role-name>editar-agendamento</role-name>
	</security-role>
	<security-role>
		<role-name>aprovar-agendamento</role-name>
	</security-role>
</web-app>